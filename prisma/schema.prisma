generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [pg_graphql, pg_stat_statements, pg_trgm, pgcrypto, supabase_vault, uuid_ossp(map: "uuid-ossp")]
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?
  createdAt     DateTime    @default(now())
  settings      Json?
  accounts      Account[]
  bankrolls     Bankroll[]
  operations    Operation[]
  sessions      Session[]
  tags          Tag[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Bankroll {
  id             String        @id @default(cuid())
  userId         String
  bookmakerName  String
  currency       String        @default("BRL")
  currentBalance Decimal       @default(0.00) @db.Decimal(12, 2)
  user           User          @relation(fields: [userId], references: [id])
  bets           Bet[]
  transactions   Transaction[]

  @@unique([userId, bookmakerName])
}

model Operation {
  id             String        @id @default(cuid())
  userId         String
  type           OperationType @default(SIMPLE)
  totalStake     Decimal       @db.Decimal(12, 2)
  expectedReturn Decimal?      @db.Decimal(12, 2)
  actualReturn   Decimal?      @db.Decimal(12, 2)
  roi            Decimal?
  description    String?
  status         BetStatus     @default(PENDING)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  legs           Bet[]
  user           User          @relation(fields: [userId], references: [id])
  tags           Tag[]         @relation("OperationToTag")

  @@index([userId, status])
  @@index([userId, createdAt])
}

model Event {
  id    String   @id @default(cuid())
  name  String
  date  DateTime
  sport String?
  bets  Bet[]

  @@index([date, name])
}

model Bet {
  id          String    @id @default(cuid())
  operationId String
  eventId     String
  bankrollId  String
  selection   String
  odds        Decimal   @db.Decimal(5, 3)
  closingOdds Decimal?  @db.Decimal(5, 3)
  stake       Decimal   @db.Decimal(12, 2)
  status      BetStatus @default(PENDING)
  resultValue Decimal?  @db.Decimal(12, 2)
  league      String?
  printUrl    String?
  bankroll    Bankroll  @relation(fields: [bankrollId], references: [id])
  event       Event     @relation(fields: [eventId], references: [id])
  operation   Operation @relation(fields: [operationId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model Transaction {
  id         String          @id @default(cuid())
  bankrollId String
  type       TransactionType
  amount     Decimal         @db.Decimal(12, 2)
  fee        Decimal         @default(0.00) @db.Decimal(12, 2)
  date       DateTime        @default(now())
  notes      String?
  bankroll   Bankroll        @relation(fields: [bankrollId], references: [id])
}

model Tag {
  id         String      @id @default(cuid())
  userId     String
  name       String
  createdAt  DateTime    @default(now())
  user       User        @relation(fields: [userId], references: [id])
  operations Operation[] @relation("OperationToTag")

  @@unique([userId, name])
}

enum BetStatus {
  PENDING
  WON
  LOST
  VOID
  CASHED_OUT
}

enum OperationType {
  SIMPLE
  ARBITRAGE
  MATCHED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  ADJUSTMENT
}
